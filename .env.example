# SmartCloudOps AI - Environment Configuration
# Copy this to .env and customize for your environment

# Environment Settings
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-here

# Prometheus Configuration
PROMETHEUS_URL=http://3.89.229.102:9090
PROMETHEUS_TIMEOUT=30
PROMETHEUS_SSL_VERIFY=true

# AI Provider Configuration
AI_PROVIDER=auto
OPENAI_API_KEY=your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here

# ML Configuration
ML_MODEL_PATH=/app/ml_models/real_data_model.json
ML_DATA_PATH=/app/data/real_training_data.json
ML_CONFIDENCE_THRESHOLD=0.7
ML_MAX_PREDICTION_TIME=30

# Logging Configuration
LOG_LEVEL=INFO

# Flask Configuration
PORT=5000

# AWS Configuration (if using)
AWS_ACCESS_KEY_ID=your-aws-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-here
AWS_DEFAULT_REGION=us-east-1
