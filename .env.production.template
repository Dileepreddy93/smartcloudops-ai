# SmartCloudOps AI - Production Environment Configuration
# =======================================================
#
# CRITICAL: DO NOT COMMIT ACTUAL PRODUCTION SECRETS TO GIT
# Copy this file to .env.production and update with real values

# Environment
ENVIRONMENT=production

# Security Configuration
SECRET_KEY=CHANGE_ME_TO_64_CHAR_RANDOM_STRING_FOR_PRODUCTION
API_KEY_SALT=CHANGE_ME_TO_RANDOM_SALT_FOR_PRODUCTION

# API Keys (Generate secure keys for production)
ADMIN_API_KEY=sk-admin-prod-CHANGE_ME_TO_SECURE_RANDOM_KEY
ML_API_KEY=sk-ml-prod-CHANGE_ME_TO_SECURE_RANDOM_KEY
READONLY_API_KEY=sk-readonly-prod-CHANGE_ME_TO_SECURE_RANDOM_KEY

# Database Configuration (Production PostgreSQL)
DB_TYPE=postgresql
DB_HOST=prod-db.smartcloudops.ai
DB_PORT=5432
DB_NAME=smartcloudops_prod
DB_USER=smartcloudops_prod_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_DB_PASSWORD
DB_SSL_MODE=require

# Security Settings
API_KEY_EXPIRY_DAYS=30
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000
MAX_LOGIN_ATTEMPTS=3
SESSION_TIMEOUT_MINUTES=60

# ML Engine Configuration
ML_MODEL_PATH=/opt/smartcloudops/ml_models
ML_MIN_F1_SCORE=0.85
ML_PREDICTION_TIMEOUT=3
ML_MAX_BATCH_SIZE=200
ML_ENABLE_REAL_DATA=true

# Monitoring Endpoints (Production URLs)
PROMETHEUS_ENDPOINT=https://prometheus.smartcloudops.ai
GRAFANA_ENDPOINT=https://grafana.smartcloudops.ai
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Logging
LOG_LEVEL=WARNING

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME_TO_PRODUCTION_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_TO_PRODUCTION_AWS_SECRET

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/smartcloudops/cert.pem
SSL_KEY_PATH=/etc/ssl/smartcloudops/key.pem
SSL_CA_PATH=/etc/ssl/smartcloudops/ca.pem

# Backup Configuration
BACKUP_S3_BUCKET=smartcloudops-prod-backups
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=0 2 * * *

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_TO=alerts@smartcloudops.ai
SMS_ALERTS_ENABLED=true

# Performance Tuning
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
REDIS_URL=redis://prod-redis.smartcloudops.ai:6379/0
MEMCACHED_SERVERS=prod-cache.smartcloudops.ai:11211
