# SmartCloudOps AI - Staging Environment Configuration
# ====================================================

# Environment
ENVIRONMENT=staging

# Security Configuration
SECRET_KEY=staging_secret_key_32_chars_minimum_length_required
API_KEY_SALT=staging_salt_for_api_key_hashing

# API Keys (Staging keys - less secure than production)
ADMIN_API_KEY=sk-admin-staging-demo-key-for-testing-purposes
ML_API_KEY=sk-ml-staging-demo-key-for-testing-purposes
READONLY_API_KEY=sk-readonly-staging-demo-key-for-testing

# Database Configuration (Staging PostgreSQL)
DB_TYPE=postgresql
DB_HOST=staging-db.smartcloudops.ai
DB_PORT=5432
DB_NAME=smartcloudops_staging
DB_USER=smartcloudops_staging_user
DB_PASSWORD=staging_database_password_change_me
DB_SSL_MODE=require

# Security Settings (More permissive for testing)
API_KEY_EXPIRY_DAYS=7
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=30

# ML Engine Configuration
ML_MODEL_PATH=ml_models
ML_MIN_F1_SCORE=0.7
ML_PREDICTION_TIMEOUT=5
ML_MAX_BATCH_SIZE=100
ML_ENABLE_REAL_DATA=true

# Monitoring Endpoints (Staging URLs)
PROMETHEUS_ENDPOINT=https://prometheus-staging.smartcloudops.ai
GRAFANA_ENDPOINT=https://grafana-staging.smartcloudops.ai
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Logging (More verbose for debugging)
LOG_LEVEL=INFO

# AWS Configuration (Staging environment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=staging_aws_access_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret_key

# SSL/TLS Configuration (Self-signed for staging)
SSL_CERT_PATH=/etc/ssl/staging/cert.pem
SSL_KEY_PATH=/etc/ssl/staging/key.pem

# Backup Configuration (Less frequent backups)
BACKUP_S3_BUCKET=smartcloudops-staging-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 3 * * *

# Performance Tuning (Lower specs for staging)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=60
REDIS_URL=redis://staging-redis.smartcloudops.ai:6379/0
