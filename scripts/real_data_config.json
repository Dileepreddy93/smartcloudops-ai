{
  "environments": {
    "development": {
      "prometheus": {
        "enabled": true,
        "url": "http://3.89.229.102:9090",
        "ssl_verify": false,
        "timeout": 30
      }
    },
    "staging": {
      "prometheus": {
        "enabled": true,
        "url": "https://staging-prometheus.example.com:9090",
        "ssl_verify": true,
        "timeout": 30
      }
    },
    "production": {
      "prometheus": {
        "enabled": true,
        "url": "https://prometheus.example.com:9090",
        "ssl_verify": true,
        "timeout": 30
      }
    }
  },
  "data_sources": {
    "application_metrics": {
      "enabled": true,
      "endpoints": [
        "http://localhost:5000/metrics",
        "http://localhost:8080/actuator/metrics"
      ],
      "metrics": [
        "http_requests_total",
        "http_request_duration",
        "database_connections",
        "cache_hit_ratio",
        "queue_size",
        "error_rate",
        "throughput",
        "concurrent_users"
      ],
      "collection_interval": 30
    },
    "business_metrics": {
      "enabled": true,
      "metrics": [
        "user_sessions",
        "api_calls_per_minute",
        "transaction_volume",
        "page_load_time",
        "feature_usage",
        "user_activity"
      ],
      "collection_interval": 60
    },
    "prometheus": {
      "enabled": true,
      "metrics": [
        "cpu_usage",
        "memory_usage", 
        "disk_io",
        "network_rx",
        "network_tx",
        "load_1m",
        "load_5m", 
        "load_15m",
        "disk_used_percent",
        "response_time",
        "tcp_connections",
        "file_descriptors",
        "context_switches",
        "interrupts",
        "boot_time",
        "process_cpu_usage",
        "process_memory_usage",
        "process_io_read",
        "process_io_write",
        "filesystem_inodes_used",
        "network_errors",
        "network_dropped_packets"
      ],
      "collection_interval": 30
    },
    "system": {
      "enabled": true,
      "metrics": [
        "cpu_usage",
        "memory_usage",
        "disk_usage",
        "network_io",
        "process_count",
        "load_average"
      ],
      "collection_duration_minutes": 60
    },
    "cloudwatch": {
      "enabled": false,
      "region": "us-east-1",
      "metrics": [
        "CPUUtilization",
        "NetworkIn",
        "NetworkOut", 
        "DiskReadBytes",
        "DiskWriteBytes"
      ]
    },
    "csv_files": {
      "enabled": true,
      "paths": [
        "../data/",
        "/var/log/metrics/",
        "./metrics.csv"
      ],
      "required_columns": ["timestamp"]
    },
    "log_files": {
      "enabled": true,
      "paths": [
        "/var/log/",
        "../logs/",
        "./app.log"
      ],
      "patterns": {
        "response_time": "response_time[:\\s]+(\\d+\\.?\\d*)",
        "cpu_usage": "cpu[:\\s]+(\\d+\\.?\\d*)%?",
        "memory_usage": "memory[:\\s]+(\\d+\\.?\\d*)%?",
        "disk_io": "disk_io[:\\s]+(\\d+\\.?\\d*)",
        "network_io": "network[:\\s]+(\\d+\\.?\\d*)"
      }
    }
  },
  "data_processing": {
    "anomaly_detection_methods": ["iqr", "zscore", "isolation_forest", "local_outlier_factor"],
    "anomaly_threshold": 1.5,
    "zscore_threshold": 3.0,
    "isolation_forest_contamination": 0.1,
    "lof_n_neighbors": 20,
    "fill_missing_values": true,
    "remove_duplicates": true,
    "time_window_minutes": 60,
    "seasonal_decomposition": true,
    "feature_engineering": {
      "rolling_averages": [5, 15, 30],
      "derivative_features": true,
      "time_based_features": true,
      "interaction_features": true
    }
  },
  "output": {
    "save_to_csv": true,
    "csv_path": "../data/real_monitoring_data.csv",
    "save_metadata": true,
    "include_anomaly_labels": true
  },
  "collection_settings": {
    "default_hours_back": 24,
    "max_data_points": 10000,
    "retry_attempts": 3,
    "timeout_seconds": 30
  }
}
