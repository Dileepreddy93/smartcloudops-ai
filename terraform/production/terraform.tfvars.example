# Production Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "smartcloudops"
environment  = "production"

# Database Configuration
db_username = "smartcloudops_user"
db_password = "your-secure-database-password-here"  # Generate with: openssl rand -hex 32

# Instance Types (adjust based on your needs)
instance_type     = "t3.micro"      # For development/testing
# instance_type   = "t3.small"      # For small production
# instance_type   = "t3.medium"     # For medium production

db_instance_class = "db.t3.micro"   # For development/testing
# db_instance_class = "db.t3.small" # For small production
# db_instance_class = "db.r5.large" # For large production

redis_node_type = "cache.t3.micro"  # For development/testing
# redis_node_type = "cache.t3.small" # For small production

# Auto Scaling Configuration
asg_min_size         = 1
asg_max_size         = 4
asg_desired_capacity = 2

# Enable features for production
enable_auto_scaling = true
enable_monitoring   = true
multi_az           = false  # Set to true for production
storage_encrypted  = true
deletion_protection = true

# Backup Configuration
backup_retention_period = 7  # Days

# Tags
tags = {
  Project     = "smartcloudops"
  Environment = "production"
  ManagedBy   = "terraform"
  Owner       = "devops-team"
  CostCenter  = "engineering"
}
